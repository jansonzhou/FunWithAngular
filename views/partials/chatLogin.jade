.hero-unit
  form.form-horizontal(name='loginForm', ng-submit='sendForm()')
    .control-group
      h1 Hello!
      h5 Type your nick below and click 'LogIn'
    .control-group
      input(type='text', ng-change='toggleLoginBtn(loginInput)', ng-model='loginInput', required='required')
    .control-group
      button.btn.btn-large.btn-info(type='submit', ng-disabled='myForm.$invalid', ng:class='loginFormValid')
        | LogIn
  form(action='/login', method='post')
    div
      label Username:
      input(type='text', name='username')
    div
      label Password:
      input(type='password', name='password')
    div
      input(type='submit', value='Log In')
